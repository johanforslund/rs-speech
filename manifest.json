{
    "name": "rs-speech",
    "version": "1.0",
    "description": "Read-aloud!",
    "permissions": ["declarativeContent", "activeTab"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [{
     "run_at": "document_start",
     "matches": ["*://*.reddit-stream.com/*"],
     "js": [
       "content.js"
      ]
    }],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "manifest_version": 2
}
